{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./package",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
