{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./package",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./src/store/**/*"
  ],
  "angularCompilerOptions": {
    "genDir": "./ngfactory"
  }
}
